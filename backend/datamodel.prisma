enum Permission {
  ADMIN
  USER
  ITEMDELETE
  ITEMUPDATE
  ITEMCREATE
  PERMISSIONSUPDATE
}

type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  password : String!
  resetToken : String
  resetTokenExpiry : Float
  permissions : [Permission]
}

type Item {
  id : ID! @unique
  title : String!
  description : String!
  image : String!
  largeImage : String!
  price : Int!
  # createdAt : DateTime!
  # updatedAt : DateTime!
  user : User!
}
